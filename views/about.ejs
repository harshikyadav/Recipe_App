<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TheRecipeNest</title>
    <link rel="stylesheet" href="stylesheet/about.css">
    
</head>
<body>
    <header>
        <nav>
            <div class="nav-left">
                <h2>TheRecipeNest</h2>
            </div>
            <div class="nav-center">
                <a href="/home">Home</a>
                <a href="/recipes">Recipes</a>
                <a href="/contacts">Contacts</a>
            </div>
            <div class="nav-right">
                <div class="dropdown">
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <%recipe_data.forEach((val)=>{%>
            <a href="/recipes/<%=val.id%>" class="click-card">
            <div class="insideCard">
                <div class="img" style='background-image: url(<%=val.image_url%>);'></div>
                <div class="tittle"><%=val.title%></div>
                <div class="content"><%=val.about%></div>
            </div>
            </a>
        <%})%>
        <div class="insideCard plus_card"><div class="plus"><a href="/create">+</a></div></div>
        
    </div>
</body>
<script>
    const plus_card=document.querySelector('.plus_card');
    plus_card.addEventListener('click',()=>{
        window.location.href = '/create';
    })
    
</script>
</html>